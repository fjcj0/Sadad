generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id                             Int       @id @default(autoincrement())
  phone                          String    @unique
  password                       String
  verificationCode               String?
  verificationExpiresAt          DateTime?
  verificationResetCode          String?
  resetVerificationCodeExpiresAt DateTime?
  resendCode                     DateTime?
  isVerified                     Boolean   @default(false)
  verificationTokenPageRest      String?
}
