generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                             Int       @id @default(autoincrement())
  phone                          String    @unique
  password                       String
  verificationCode               String?
  verificationExpiresAt          DateTime?
  verificationResetCode          String?
  resetVerificationCodeExpiresAt DateTime?
  resendCode                     DateTime?
  isVerified                     Boolean   @default(false)
  verificationTokenPageRest      String?
  tokenPageExpiresAt             DateTime?
}
