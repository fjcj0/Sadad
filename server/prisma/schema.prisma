generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  user
  ai
}

model User {
  id                             Int       @id @default(autoincrement())
  phone                          String    @unique
  password                       String
  verificationCode               String?
  verificationExpiresAt          DateTime?
  verificationResetCode          String?
  resetVerificationCodeExpiresAt DateTime?
  resendCode                     DateTime?
  isVerified                     Boolean   @default(false)
  verificationTokenPageRest      String?
  tokenPageExpiresAt             DateTime?
  messages                       Message[]
}

model Message {
  id         Int      @id @default(autoincrement())
  role       Role
  message    String
  created_at DateTime @default(now())
  userId     Int
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
